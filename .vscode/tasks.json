{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "G++",
      "command": "/usr/bin/g++",
      "args": [
        "-g",
        "-fdiagnostics-color=always",
        "-std=c++17",
        "-Dpcms2",
        "-o",
        "${fileDirname}/.bin/${fileBasenameNoExtension}",
        "-Wfloat-equal",
        "-Wconversion",
        "-D_GLIBCXX_DEBUG",
        "-D_GLIBCXX_DEBUG_PEDANTIC",
        "-Wall",
        "-Wextra",
        "-O2",
        "-Wshadow",
        "${file}"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Задача создана отладчиком."
    }
  ],
  "version": "2.0.0"
}